<%= flash[:message] %>
<% end %>

<%= form_tag '/login', method: 'post' do %>
<%= label_tag :username %>
<%= text_field_tag :username %><br>
<%= label_tag :password %>
<%= password_field_tag :password %><br>
<%= submit_tag "Login"%>
<% end %>

<%= button_to "Create an account", new_user_path, method: "get" %>
