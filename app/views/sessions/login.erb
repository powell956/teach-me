
<div class="logo">
  <h1>TeachMe</h1>
</div>

<div class="container">
  <% if flash[:message] %>
    <%= flash[:message] %>
  <% end %><br>
  <div class="login-form">
    <%= form_tag '/login', method: 'post' do %>
      <label for="welcome" id="signin-header">'Sup Fam</label><br>
      <label id="welcome">Y'all Wanna Learn?</label><br>
      <%= label_tag :username %>
      <%= text_field_tag :username %><br>
      <%= label_tag :password %>
      <%= password_field_tag :password %><br>
      <%= submit_tag "Login"%>
    <% end %>
    <div style="height: 5px"></div>
    <%= button_to "Create an account", new_user_path, method: "get" %>
  </div>
</div>
