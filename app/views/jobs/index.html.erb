<p id="notice"><%= notice %></p>

<h1>Jobs</h1>

<table>
  <thead>
    <tr>
      <th>Tutor</th>
      <th>Student</th>
      <th>Description</th>
      <th>Location</th>
      <th>Time</th>
      <th>Rate</th>
      <th>Topic</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.tutor.name unless job.tutor == nil%></td>
        <td><%= job.student.name unless job.student == nil%></td>
        <td><%= job.description %></td>
        <td><%= job.location %></td>
        <td><%= job.time %></td>
        <td><%= job.rate %></td>
        <td><%= job.topic.name %></td>
        <td><%= link_to 'Show', job %></td>
        
        <%# <!-- <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %><%#</td> --> %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

