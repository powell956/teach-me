<p id="notice"><%= notice %></p>

<h1>Tutoring Session</h1>
<p>
  <strong>Tutor:</strong>
  <% if @job.tutor %>
    <%= @job.tutor.name %>
  <% else %>
  <div>Needs a tutor</div>
  <% end %>
</p>

<p>
  <strong>Student:</strong>
  <% if @job.student %>
  <%= @job.student.name %>
  <% else %>
  <div>Needs a student</div>
  <% end %>
</p>

<p>
  <strong>Description:</strong>
  <%= @job.description %>
</p>

<p>
  <strong>Location:</strong>
  <%= @job.location %>
</p>

<p>
  <strong>Time:</strong>
  <%= @job.friendly_time %>
</p>

<p>
  <strong>Hourly rate:</strong>
  $<%= @job.rate %>
</p>

<p>
  <strong>Topic:</strong>
  <%= @job.topic.name %>
</p>

<%= link_to 'Edit', edit_job_path(@job) %> |
<%= link_to 'Back', jobs_path %>
