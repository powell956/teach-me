<h1>Job Board</h1>



<h2>Tutors Needed!</h2>

<div>
  Search by Topic:
</div>

<ul>
  <% @jobs.looking_for_tutors.each do |job| %>
<li> <%= job.student.username %><br>
  <%= job.description %><br>
  <%= job.location %><br>
  <%= job.time %><br>
  <%= job.rate %><br>
  <%= job.topic.name %></li><br>
  <%= button_to "I'll teach you!", job, method: 'get' %>
  <% end %>
</ul>



<h2>Need Tutoring?</h2>

<div>
  Search by Topic:
</div>

<ul>
  <% @jobs.looking_for_students.each do |job| %>
<li> <%= job.tutor.username %><br>
  <%= job.description %><br>
  <%= job.location %><br>
  <%= job.time %><br>
  <%= job.rate %><br>
  <%= job.topic.name %></li><br>
  <%= button_to "Teach Me!", job, method: 'get' %>
  <% end %>
</ul>
